<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <!--未来三天天气信息-->
    <RelativeLayout
        android:id="@+id/weather_fulture1"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <!--今日-->
        <!--最低~最高温度-->
        <TextView
            android:id="@+id/weather01_wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:paddingBottom="20dp"
            android:text="3°C~5°C"
            android:textSize="10sp"
            android:textColor="#cfffffff"
            android:layout_alignParentBottom="true" />

        <!--今日-->
        <TextView
            android:id="@+id/weather01_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/weather01_wendu"
            android:paddingLeft="45dp"
            android:paddingBottom="5dp"
            android:text="今日 小雪"
            android:textSize="12sp"
            android:textColor="#cfffffff" />

        <!--今日天气图标-->
        <ImageView
            android:id="@+id/weather01_pic"
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:layout_above="@id/weather01_type"
            android:paddingLeft="20.0dp"
            android:paddingBottom="10dp"
            android:src="@drawable/biz_plugin_weather_qing"/>


        <TextView
            android:id="@+id/weather01_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_above="@id/weather01_pic"
            android:paddingLeft="45dp"
            android:paddingBottom="5dp"
            android:text="今日 小雪"
            android:textSize="12sp"
            android:textColor="#cfffffff" />

        <!--明日-->
        <!--最低~最高温度-->
        <TextView
            android:id="@+id/weather02_wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="20dp"
            android:text="3°C~5°C"
            android:textSize="10sp"
            android:textColor="#cfffffff"
            android:layout_centerHorizontal="true" />

        <!--明日天气状况-->
        <TextView
            android:id="@+id/weather02_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/weather02_wendu"
            android:layout_centerHorizontal="true"
            android:paddingBottom="5dp"
            android:text= "明日 晴"
            android:textSize="12sp"
            android:textColor="#cfffffff" />

        <!--明日天气图标-->
        <ImageView
            android:id="@+id/weather02_pic"
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:layout_above="@id/weather02_type"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:src="@drawable/biz_plugin_weather_yin"/>

        <!--明天日期-->
        <TextView
            android:id="@+id/weather02_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/weather02_pic"
            android:layout_centerHorizontal="true"
            android:paddingBottom="5dp"
            android:text="今日 小雪"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#cfffffff" />

        <!--后日-->
        <!--最低~最高温度-->
        <TextView
            android:id="@+id/weather03_wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="20dp"
            android:text="3°C~5°C"
            android:textSize="10sp"
            android:textColor="#cfffffff"
            android:paddingRight="35dp"
            android:layout_alignParentRight="true" />

        <!--后日天气状况-->
        <TextView
            android:id="@+id/weather03_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/weather03_wendu"
            android:paddingBottom="5dp"
            android:text= "后日 晴"
            android:textSize="12sp"
            android:textColor="#cfffffff"
            android:paddingRight="50dp"
            android:layout_alignParentRight="true" />

        <!--后日天气图标-->
        <ImageView
            android:id="@+id/weather03_pic"
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:layout_above="@id/weather03_type"
            android:paddingRight="20.0dp"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dp"
            android:src="@drawable/biz_plugin_weather_qing"/>


        <TextView
            android:id="@+id/weather03_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/weather03_pic"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:text= "后日 晴"
            android:textSize="12sp"
            android:textColor="#cfffffff"
            android:paddingRight="50dp"
            android:layout_alignParentRight="true"  />
    </RelativeLayout>


</LinearLayout>